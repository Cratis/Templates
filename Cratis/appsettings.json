{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "Cratis": {
        "Arc": {
            "GeneratedApis": {
                "RoutePrefix": "api",
                "IncludeCommandNameInRoute": false,
                "SegmentsToSkipForRoute": 1
            }
        },
        "Chronicle": {
            "EventStore": "CratisApp"
        },
        "MongoDB": {
            "Server": "localhost",
            "Port": 27017,
            "Database": "CratisApp"
        }
    }
}
